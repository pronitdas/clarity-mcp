{
  "name": "clarity-mcp-server",
  "version": "1.1.13",
  "description": "A Model Context Protocol server providing structured reasoning and thinking tools with memory graph",
  "type": "commonjs",
  "main": "dist/index.js",
  "bin": {
    "clarity-mcp-server": "./dist/bundle.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "dev": "tsc --watch",
    "build": "node build.js",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "prepare": "npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "reasoning",
    "thinking",
    "ai-tools"
  ],
  "author": "Pronit <pronit78@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pronitdas/clarity-mcp.git"
  },
  "homepage": "https://github.com/pronitdas/clarity-mcp#readme",
  "bugs": {
    "url": "https://github.com/pronitdas/clarity-mcp/issues"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.4.0",
    "axios": "^1.9.0",
    "chalk": "^5.3.0",
    "node-addon-api": "^7.1.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.8",
    "esbuild": "^0.19.0",
    "jest": "^29.5.0",
    "node-gyp": "^10.0.1",
    "ts-jest": "^29.1.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "pnpm": {
    "ignoredBuiltDependencies": [
      "core-js",
      "esbuild"
    ]
  }
}