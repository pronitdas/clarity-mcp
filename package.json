{
  "name": "clarity-mcp-server",
  "version": "1.1.5",
  "description": "A Model Context Protocol server providing structured reasoning and thinking tools with memory graph",
  "type": "commonjs",
  "main": "dist/bundle.js",
  "bin": {
    "clarity-mcp-server": "dist/bundle.js"
  },
  "scripts": {
    "dev": "tsc --watch",
    "prebuild": "npm rebuild @tensorflow/tfjs-node --build-from-source",
    "build": "node build.js",
    "start": "node dist/bundle.js",
    "clean": "rm -rf dist",
    "prepare": "npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "reasoning",
    "thinking",
    "ai-tools"
  ],
  "author": "Pronit <pronit78@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pronitdas/clarity-mcp.git"
  },
  "homepage": "https://github.com/pronitdas/clarity-mcp#readme",
  "bugs": {
    "url": "https://github.com/pronitdas/clarity-mcp/issues"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.4.0",
    "@tensorflow-models/universal-sentence-encoder": "^1.3.3",
    "@tensorflow/tfjs": "^4.17.0",
    "@tensorflow/tfjs-node": "^4.17.0",
    "chalk": "^5.3.0",
    "node-addon-api": "^7.1.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.8",
    "esbuild": "^0.19.0",
    "node-gyp": "^10.0.1",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "pnpm": {
    "ignoredBuiltDependencies": [
      "core-js",
      "esbuild"
    ],
    "onlyBuiltDependencies": [
      "@tensorflow/tfjs-node"
    ]
  }
}